<!DOCTYPE html>
<html>
<head>
  <title>Poll</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:error] -%>
    <p class='error'><%=h flash[:error] %></p>
<% end -%>
<% if flash[:notice] -%>
    <p class='notice'><%=h flash[:notice] %></p>
<% end -%>

<%= yield %>

</body>
</html>
